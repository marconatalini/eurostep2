<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dett_ordine_la"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.marconatalini.eurostep.DettOrdineLaActivity"
    android:orientation="vertical">

    <TextView
        android:text="numero ordine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <TextView
        android:text="..."
        android:layout_below="@+id/textView2"
        android:id="@+id/ordine_lotto"
        style="@style/Campo_Dett_ordineLA" />

    <TextView
        android:text="cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordine_lotto"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <TextView
        android:text="..."
        android:layout_height="wrap_content"
        android:id="@+id/cliente"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        style="@style/Campo_Dett_ordineLA" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cliente"
        android:layout_toEndOf="@+id/textView7"
        android:id="@+id/riferimento"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Scadenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:text="..."
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:id="@+id/scadenza"
        style="@style/Campo_Dett_ordineLA"
        android:visibility="gone" />

    <TextView
        android:text="Colore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scadenza"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11" />

    <TextView
        android:text="..."
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:id="@+id/finitura"
        style="@style/Campo_Dett_ordineLA" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/finitura"
        android:columnCount="3"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Cornici"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>
        <TextView
            android:text="Spezzoni"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>


        <TextView
            android:text="Lamiere"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/n_cornici"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>
        <TextView
            android:id="@+id/n_complementari"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/n_lamiere"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:text="Tagli"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>
        <TextView
            android:text="Montaggi"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:text="Lavoro CNC"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/n_tagli"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>
        <TextView
            android:id="@+id/n_montaggi"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/n_lavCNC"
            android:text="..."
            style="@style/Campo_Dett_ordineLA"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"/>


    </GridLayout>

    <TextView
        android:text="Step produzione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_step_produzione" />

</LinearLayout>
